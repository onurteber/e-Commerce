@model IEnumerable<e_Commerce.Core.Model.Entity.Order>

@{
    ViewBag.Title = "Index";
}


<style>
    .bosluklink {
        margin-top: 30px;
    }
</style>

<p>
    <a class="list-group-item-heading btn btn-default bosluklink"  href="/Home">Alışverişe Devam Et</a>
</p>
<table class="table">
    <tr>
        <th>
            Sipariş No
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.ActionLink("Sipariş Detayı", "Details", new { id=item.ID }) 
        </td>
    </tr>
}

</table>
