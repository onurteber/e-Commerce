@model List<e_Commerce.Core.Model.Entity.Product>
@{
    ViewBag.Title = "Index";
    var category = (e_Commerce.Core.Model.Entity.Category)ViewBag.category;
    var islogin = (bool)ViewBag.islogin;
}

<h2>@category.Name Kategorisindeki Ürünler</h2>
<style>
    .productBox {
        width: 200px;
        float: left;
        margin: 10px;
        border: 2px solid #e8e7e7;
        padding: 10px;
    }

        .productBox img {
            width: 100%;
        }

    .title {
        font-weight: bold;
        text-align: center;
    }

    .productBox p {
        text-align: center;
    }
</style>
@{
    foreach (var item in Model)
    {
<div class="productBox">
    <p class="title">@item.Name</p>
    <img src="@item.ImageUrl" />
    <p class="title">
        @item.Brand
    </p>
    <p class="title">
        @item.Price.ToString("##,## ₺")
    </p>
    <p class="title">
        @item.Description
    </p>
    <a href="/urun/@item.Name.Replace(" ","-")/@item.ID" class="btn btn-success">İncele</a>
    @if (ViewBag.islogin)
    {
        <a href="/#" data-pID="@item.ID" class="btn btn-default addBasket"><i class="fas fa-shopping-basket"></i>Sepete At</a>
    }

</div>

    }
}

